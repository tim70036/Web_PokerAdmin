<div class="m-content">
	
	<div class="m-portlet m-portlet--mobile">
		<div class="m-portlet__head">
			<div class="m-portlet__head-caption">
				<div class="m-portlet__head-title">
					<h2 class="m-portlet__head-text">
						客服查詢
					</h2>
				</div>
			</div>  
			<div class="m-portlet__head-tools">
				<ul class="m-portlet__nav">
					<li class="m-portlet__nav-item">
						<button  data-toggle="modal" data-target="#create-modal" type="button" class="btn btn-accent m-btn m-btn--custom m-btn--icon  m-btn--pill m-btn--air m-btn--bolder">
							<span>
								<i class="fa fa-user-plus"></i>
								<span>新增客服</span>
							</span>
						</button>
					</li>
				</ur>
			</div>
		</div>
		
		<div class="m-portlet__body">
			
			<table class="table table-striped- table-bordered table-hover table-checkable" id="data-table">
				<thead>
					<tr>
						<th>RecordId</th>		{{!-- 0 --}}
						<th>帳號</th>			{{!-- 1 --}}
						<th>名稱</th>			{{!-- 2 --}}
						<th>Line Id</th>		{{!-- 3 --}}
						<th>Wechat Id</th>		{{!-- 4 --}}
						<th>Facebook Id</th>	{{!-- 5 --}}
						<th>電話</th>			{{!-- 6 --}}
						<th>銀行代號</th>		{{!-- 7 --}}
						<th>銀行名稱</th>		{{!-- 8 --}}
						<th>銀行帳號</th>		{{!-- 9 --}}
						<th>備註</th>			{{!-- 10 --}}
						<th>最後更新時間</th>	{{!-- 11 --}}
						<th>創立時間</th>		{{!-- 12 --}}
					</tr>
				</thead>
			</table>

		</div>
	</div>

	<!--begin::add Modal-->
	<div class="modal fade" id="create-modal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog modal-lg  modal-dialog-centered" role="document">
			<div class="modal-content">
				<!--begin::Form-->
				<form id="create-form" autocomplete="off" class="m-form m-form--state m-form--label-align-right">
					<div class="modal-header">
						<h5 class="modal-title" id="exampleModalLabel">註冊客服帳號</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">

						<!--begin::Form Section-->
						<div class="m-form__section m-form__section--first">
							<div class="m-form__heading">
								<h3 class="m-form__heading-title">帳號資訊:</h3>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">客服名稱 *</label>
								<div class="col-lg-10 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input name="name" type="text" class="form-control m-input" placeholder="請輸入名稱">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="flaticon-exclamation-2"></i></span></span>
									</div>
									<span class="m-form__help"></span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">客服帳號 *</label>
								<div class="col-lg-10 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input name="account" type="text" class="form-control m-input" placeholder="請輸入帳號">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-user"></i></span></span>
									</div>
									<span class="m-form__help">該人員將使用此帳號登入 </span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">客服密碼 *</label>
								<div class="col-lg-10 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input id="password" name="password" type="password" class="form-control m-input" placeholder="請輸入密碼" autocomplete="new-password">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-key"></i></span></span>
									</div>
									<span class="m-form__help">該人員將使用此密碼登入 </span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">確認密碼 *</label>
								<div class="col-lg-10 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input name="passwordConfirm" type="password" class="form-control m-input" placeholder="請輸入相同密碼" autocomplete="new-password">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-key"></i></span></span>
									</div>
									<span class="m-form__help">請再次輸入密碼</span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">客服信箱 </label>
								<div class="col-lg-10 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input id="email" name="email" type="text" class="form-control m-input" placeholder="請輸入email">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-envelope"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
							</div>
						</div>
						<!--end::Form Section-->

						<!--begin::Form Section-->
						<div class="m-form__section m-form__section">
							<div class="m-form__heading">
								<h3 class="m-form__heading-title">銀行資訊:</h3>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">銀行代號 </label>
								<div class="col-lg-4 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input name="bankSymbol" type="text" class="form-control m-input" placeholder="請輸入銀行代號">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-bank"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
								<label class="col-lg-2 col-form-label">銀行名稱 </label>
								<div class="col-lg-4 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input name="bankName" type="text" class="form-control m-input" placeholder="請輸入銀行名稱">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="flaticon-exclamation-2"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">銀行帳號 </label>
								<div class="col-lg-10 m-form__group-sub">
									<div class="m-input-icon m-input-icon--left">
										<input name="bankAccount" type="text" class="form-control m-input" placeholder="請輸入銀行帳號">
										<span class="m-input-icon__icon m-input-icon__icon--left"><span><i class="la la-user"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
							</div>
						</div>
						<!--end::Form Section-->

						<!--begin::Form Section-->
						<div class="m-form__section m-form__section--last">
							<div class="m-form__heading">
								<h3 class="m-form__heading-title">其它資訊:</h3>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">電話號碼 </label>
								<div class="col-lg-4 m-form__group-sub">
									<div class="m-input-icon m-input-icon--right">
										<input name="phoneNumber" type="text" class="form-control m-input" placeholder="請輸入電話">
										<span class="m-input-icon__icon m-input-icon__icon--right"><span><i class="fa fa-phone"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
								<label class="col-lg-2 col-form-label">Facebook ID </label>
								<div class="col-lg-4 m-form__group-sub">
									<div class="m-input-icon m-input-icon--right">
										<input name="facebookId" type="text" class="form-control m-input" placeholder="請輸入ID">
										<span class="m-input-icon__icon m-input-icon__icon--right"><span><i class="socicon-facebook"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">Line ID </label>
								<div class="col-lg-4 m-form__group-sub">
									<div class="m-input-icon m-input-icon--right">
										<input name="lineId" type="text" class="form-control m-input" placeholder="請輸入ID">
										<span class="m-input-icon__icon m-input-icon__icon--right"><span><i class="socicon-line"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
								<label class="col-lg-2 col-form-label">WeChat ID </label>
								<div class="col-lg-4 m-form__group-sub">
									<div class="m-input-icon m-input-icon--right">
										<input name="wechatId" type="text" class="form-control m-input" placeholder="請輸入ID">
										<span class="m-input-icon__icon m-input-icon__icon--right"><span><i class="socicon-wechat"></i></span></span>
									</div>
									<span class="m-form__help"> </span>
								</div>
							</div>
							<div class="form-group m-form__group row">
								<label class="col-lg-2 col-form-label">備註 </label>
								<div class="col-lg-10 m-form__group-sub">
									​<textarea name="comment" class="form-control m-input" rows="3"></textarea>
								</div>
								<span class="m-form__help"> </span>
							</div>
						</div>
						<!--end::Form Section-->
	
					</div>
					<div class="modal-footer">
						<div class="row">
							<div class="col m--align-right">
								<button id="createButton" type="submit" class="btn m-btn--square  btn-primary m-btn m-btn--custom  ">確定新增</button>
								<button type="button" class="btn m-btn--square  btn-secondary m-btn m-btn--custom" data-dismiss="modal">取消</button>
							</div>
						</div>
					</div>
				</form>
				<!--end::Form-->
			</div>
		</div>
	</div>
	<!--end::add Modal-->
</div>

